{
  "compilerOptions": {
    "allowJs": true,
    "strict": true,
    "lib": ["dom", "dom.iterable", "dom.asynciterable", "deno.ns"],
    "jsx": "precompile",
    "types": ["svelte", "vite/client"]
  },
  "imports": {
    "svelte": "npm:svelte@5.0.0-next.1",
    "svelte/": "npm:svelte@5.0.0-next.1/",
    "svelte-spa-router": "npm:svelte-spa-router@4.0.0",
    "@tanstack/svelte-query": "npm:@tanstack/svelte-query@5.22.2",
    "d3": "npm:d3@7.8.5",
    "svelte-json-tree": "npm:svelte-json-tree@2.2.0",
    "vite": "npm:vite@5.1.4",
    "@sveltejs/vite-plugin-svelte": "npm:@sveltejs/vite-plugin-svelte@3.0.0"
  },
  "tasks": {
    "dev": "deno run -A --node-modules-dir npm:vite",
    "build": "deno run -A --node-modules-dir npm:vite build --outDir ../public",
    "preview": "deno run -A --node-modules-dir npm:vite preview",
    "check": "deno check src/**/*.{ts,svelte}"
  }
} 